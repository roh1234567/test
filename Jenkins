pipeline {
    agent any
    environment {
        // Define any environment variables needed
    }
    stages {
        stage('Build') {
            steps {
                // Clone the Git repository
                checkout scm
                // Execute the Groovy script
                script {
                    // Provide the relative path to the Groovy file
                    def groovyFilePath = "test/test.groovy"
                    // Execute the Groovy file
                    sh "groovy ${groovyFilePath}"
                }
            }
        }
    }
}
