pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                // Clone the Git repository
                checkout scm
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], 
                          userRemoteConfigs: [[url: 'https://github.com/roh1234567/test.git']]])
                script {
                    // Provide the relative path to the Groovy file
                    def groovyFilePath = "test.groovy"
                    // Execute the Groovy file
                    sh "groovy ${groovyFilePath}"
                }
            }
        }
    }
}
